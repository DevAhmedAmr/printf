#include "main.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char *toHex(char c) {
    char hex[3];
    sprintf(hex, "%02X", c);
    return strdup(hex);
}

int nonPrintAscii(va_list arg)
{
	int i, byets;
	char* upStr;

upStr = va_arg(arg, char*);
	for (i = 0; upStr[i] !='\0'; i++)
	{
		if((upStr[i] > 0 && upStr[i] < 32) || upStr[i] >= 127)
			{
				_putchar('\\');
				_putchar('x');
				_putchar('0');
				byets+=3;

			}
		else
			{
			_putchar(upStr[i]);
			byets++;
			}
			fflush(stdout);
	}
	return (byets);
}

